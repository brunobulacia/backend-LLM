generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Emisor {
  USUARIO
  LLM
}

enum TipoContenido {
  TEXTO
  IMAGEN
  VIDEO
  CONTENIDO_REDES_SOCIALES
}

enum EstadoVideo {
  GENERANDO
  COMPLETADO
  ERROR
}

enum EstadoPublicacion {
  PENDIENTE_CONFIRMACION
  CONFIRMADO
  PUBLICANDO
  PUBLICADO
  ERROR
}

model Mensaje {
  id         String        @id @default(uuid())
  contenido  String
  tipo       TipoContenido @default(TEXTO)
  rutaImagen String? // Para almacenar la ruta de la imagen si el tipo es IMAGEN
  emisor     Emisor
  chatId     String
  chat       Chat          @relation(fields: [chatId], references: [id])

  // Campos para contenido de redes sociales
  contenidoRedesSociales Json? // Almacena el JSON con el contenido para cada red social
  estadoPublicacion      EstadoPublicacion?
  imagenGenerada         String? // Ruta de la imagen generada por DALL-E para redes sociales

  // Campos para videos generados con Sora
  videoGenerado String? // Ruta del video generado por Sora para TikTok
  estadoVideo   EstadoVideo?
  soraVideoId   String? // ID del video en OpenAI Sora para tracking

  // Relación con publicaciones
  publicaciones Publicacion[]

  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Chat {
  id            String        @id @default(uuid())
  nombre        String
  mensajes      Mensaje[]
  publicaciones Publicacion[]

  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Publicacion {
  id         String            @id @default(uuid())
  titulo     String
  link       String?
  plataforma String // facebook, instagram, linkedin
  postId     String? // ID del post en la red social
  caption    String // El caption específico para esta red social
  imagenUrl  String? // URL de la imagen publicada
  videoUrl   String? // URL del video publicado (para TikTok)
  mensajeId  String? // Referencia al mensaje que generó esta publicación
  mensaje    Mensaje?          @relation(fields: [mensajeId], references: [id])
  chatId     String
  chat       Chat              @relation(fields: [chatId], references: [id])
  estado     EstadoPublicacion @default(PENDIENTE_CONFIRMACION)

  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
